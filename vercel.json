{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/weather(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/forecast(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/ascii(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/",
      "dest": "/static/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/static/index.html"
    }
  ]
}

